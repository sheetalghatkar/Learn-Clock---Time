<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setTimeActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".SetTimeActivity">

    <ImageView
        android:id="@+id/setTimeWallImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/homebg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnSetTimeBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/home_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/setTimeBgTitle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-7dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:src="@mipmap/blue_bg_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSoundSetTimeOnOff" />

    <TextView
        android:id="@+id/txtViewSetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/waltograph"
        android:text="Set Time"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/btnSoundSetTimeOnOff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageButton
        android:id="@+id/btnSoundSetTimeOnOff"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/home_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVwClockDial"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/clock_dial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setTimeBgTitle"></ImageView>

    <ImageView
        android:id="@+id/imgVwSetTimeMinuteHand"
        android:layout_width="60dp"
        android:layout_height="340dp"
        android:layout_marginLeft="145dp"
        android:paddingLeft="13dp"
        android:paddingTop="20dp"
        android:paddingRight="13dp"
        android:paddingBottom="185dp"
        android:scaleType="fitXY"
        android:alpha="0.7"
        android:src="@drawable/minute_hand"
        app:layout_constraintBottom_toBottomOf="@+id/imgVwClockDial"
        app:layout_constraintStart_toStartOf="@+id/imgVwClockDial"
        app:layout_constraintTop_toTopOf="@+id/imgVwClockDial"></ImageView>

    <ImageView
        android:id="@+id/imgVwSetTimeHourHand"
        android:layout_width="54dp"
        android:layout_height="300dp"
        android:layout_marginLeft="148dp"
        android:paddingTop="30dp"
        android:paddingBottom="120dp"
        android:scaleType="fitXY"
        android:alpha="0.7"
        android:src="@drawable/hour_hand_shadow"
        app:layout_constraintBottom_toBottomOf="@+id/imgVwClockDial"
        app:layout_constraintStart_toStartOf="@+id/imgVwClockDial"
        app:layout_constraintTop_toTopOf="@+id/imgVwClockDial"></ImageView>

    <ImageView
        android:id="@+id/imgVwCentreClock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/clock_center"
        app:layout_constraintBottom_toBottomOf="@+id/imgVwClockDial"
        app:layout_constraintEnd_toEndOf="@+id/imgVwClockDial"
        app:layout_constraintStart_toStartOf="@+id/imgVwClockDial"
        app:layout_constraintTop_toTopOf="@+id/imgVwClockDial"></ImageView>

    <View
        android:id="@+id/viewLoaderSetTimeBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#99000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imgVwSetTimeLoader"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/loader"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewBannerSetTimeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"></com.google.android.gms.ads.AdView>
</androidx.constraintlayout.widget.ConstraintLayout>