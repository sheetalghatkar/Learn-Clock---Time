<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewGuessTm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="12dp">

    <View
        android:id="@+id/viewParentCardBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@drawable/border_guess_time_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutGuessTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.mobiapps360.LearnClockTime.GuessClockView
            android:id="@+id/clockViewGuessTime"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/linearLayoutGuessTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewOption1"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <ImageButton
                    android:id="@+id/buttonGuessOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/white_bubble" />

                <TextView
                    android:id="@+id/txtViewOption1"
                    android:layout_width="160dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonGuessOption1"
                    app:layout_constraintEnd_toEndOf="@+id/buttonGuessOption1"
                    app:layout_constraintStart_toStartOf="@+id/buttonGuessOption1"
                    app:layout_constraintTop_toTopOf="@+id/buttonGuessOption1" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewOption2"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">


                <ImageButton
                    android:id="@+id/buttonGuessOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/white_bubble" />

                <TextView
                    android:id="@+id/txtViewOption2"
                    android:layout_width="160dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonGuessOption2"
                    app:layout_constraintEnd_toEndOf="@+id/buttonGuessOption2"
                    app:layout_constraintStart_toStartOf="@+id/buttonGuessOption2"
                    app:layout_constraintTop_toTopOf="@+id/buttonGuessOption2" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutGuessTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewOption3"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">


                <ImageButton
                    android:id="@+id/buttonGuessOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/white_bubble" />

                <TextView
                    android:id="@+id/txtViewOption3"
                    android:layout_width="160dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonGuessOption3"
                    app:layout_constraintEnd_toEndOf="@+id/buttonGuessOption3"
                    app:layout_constraintStart_toStartOf="@+id/buttonGuessOption3"
                    app:layout_constraintTop_toTopOf="@+id/buttonGuessOption3" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewOption4"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">


                <ImageButton
                    android:id="@+id/buttonGuessOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/white_bubble" />

                <TextView
                    android:id="@+id/txtViewOption4"
                    android:layout_width="160dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonGuessOption4"
                    app:layout_constraintEnd_toEndOf="@+id/buttonGuessOption4"
                    app:layout_constraintStart_toStartOf="@+id/buttonGuessOption4"
                    app:layout_constraintTop_toTopOf="@+id/buttonGuessOption4" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>



